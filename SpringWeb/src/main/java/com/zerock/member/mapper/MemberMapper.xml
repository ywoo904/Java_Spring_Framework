<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zerock.member.mapper.MemberMapper">

<!-- ID값 중복확인  -->
<select id="checkId" resultType="int"> 
	select count (*) as result from member where id = #{id}
</select>

<insert id="join" parameterType="com.zerock.member.command.MemberVO">
	insert into member (id,pw,name)
		values (#{id},#{pw},#{name})
</insert>

<select id="login" 
resultType="int"
parameterType="com.zerock.member.command.MemberVO">
SELECT COUNT(*) as result
 FROM member 
 WHERE id=#{id} and pw=#{pw}

</select>


</mapper>


